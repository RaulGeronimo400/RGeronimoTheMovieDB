@model ML.Movie
@{
    ViewBag.Title = "GetFavorite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <h2>Películas Favoritas</h2>
    <p>Actualmente en la lista de películas favoritas se encuentran @Model.Peliculas.Count películas.</p>
    <hr />
    @if (Model.Peliculas.Count != 0)
    {
        foreach (ML.Movie movie in Model.Peliculas)
        {
            <div class="card" style="max-width: max-content; max-height:320px; margin: 10px;">
                <div class="row no-gutters">
                    <div class="col-md-2">
                        <img style="margin-top: 7px;" src="@movie.Portada" class="card-img" alt="...">
                    </div>
                    <div class="col-md-10">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Titulo</h5>
                            <p class="card-text text-justify">@movie.Sinopsis</p>
                        </div>
                        <div class="card-body">
                            <div class="col-1 float-end">
                                <a class="btn btn-outline-danger" href="@Url.Action("DeleteFavorite", "Movie", new { media_id = movie.IdPelicula })"
                                   onclick="return confirm('¿Estas seguro de agregar como favorito la película: @movie.Titulo?');">
                                    <i class="fa-solid fa-heart"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No se encontraron películas favoritas.</p>
    }

</div>